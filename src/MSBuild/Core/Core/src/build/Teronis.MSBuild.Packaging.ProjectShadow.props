<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <IsTeronisMSBuildCorePackagingProjectShadowPropsImported>true</IsTeronisMSBuildCorePackagingProjectShadowPropsImported>
    <!-- The directory from where the shadow is being created. -->
    <SourceProjectDirectory Condition="'$(SourceProjectDirectory)' == ''"></SourceProjectDirectory>
    <!-- The shadow directory. -->
    <ShadowProjectDirectory Condition="'$(ShadowProjectDirectory)' == ''">$(MSBuildProjectDirectory)</ShadowProjectDirectory>
    <ProjectShadowGitIgnoreFile Condition="'$(ProjectShadowGitIgnoreFile)' == ''">$(MSBuildThisFileDirectory)$(MSBuildThisFileName).gitignore</ProjectShadowGitIgnoreFile>
    <DisableProjectShadowGitIgnoreFile Condition="'$(DisableProjectShadowGitIgnore)' == ''">false</DisableProjectShadowGitIgnoreFile>
  </PropertyGroup>

</Project>